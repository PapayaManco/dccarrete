<head>
	<meta charset="utf-8">
	<title>Login System</title>
</head>

<body>
  <section class="hero is-dark is-fullheight">
    <div class="hero-body">
      <div class="container has-text-centered">
        <div class="column is-4 is-offset-4">
                  <h3 class="title">Forgot your password?</h3>
                    <div class="box">
                    
                      <p class="help is-danger"><%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                        <%= render "users/shared/error_messages", resource: resource %></p>

                        <div class="field">
                          <%= f.label :email %><br />
                          <div class="control">
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
                          </div>
                        </div>

                        <div class="actions">
                          <%= f.submit "Send me reset password instructions" %>
                        </div>
                      <% end %>
                  
                      <%= render "users/shared/links" %>

        </div>
      </div>
    </div>
  </section>
</body> 