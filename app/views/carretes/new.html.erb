<%= render "static_pages/layout" %>

<body>
<br>
	<h1 class="title" align="center">Postular un nuevo carrete</h1>
<section class="section">

    <p> <%= notice%> </p>

        <p class="help is-danger"><%= form_with(model: @carrete, method: :post) do |form| %>
        </p>

            <div class="field">
                <label class="label"><%= form.label :nombre %></label>
                <div class="control">
                        <%= form.text_field :nombre, autofocus: true, autocomplete: "nombre", class: "input" %>
                </div>
            </div>

            <div class="field">
                <label class="label"><%= form.label :direccion %></label>
                <div class="control">
                        <%= form.text_field :direccion, autofocus: true, autocomplete: "direccion", class: "input" %>
                </div>
            </div>

            <div class="field">
                <label class="label"><%= form.label :max_asistentes %></label>
                <div class="control">
                        <%= form.number_field :max_asistentes, autofocus: true, autocomplete: "max_asistentes", class: "input" %>
                </div>
            </div>

            <div class="field">
                <label class="label"><%= form.label :monto_minimo %></label>
                <div class="control">
                        <%= form.number_field :monto_minimo, min: 10000, autofocus: true, autocomplete: "monto_minimo", class: "input" %>
                </div>
            </div>

            <div class='field'>
                <%=form.hidden_field :user_id, :value => current_user.id %>
            </div>


            <div class="field is-horizontal">
            <div class="field-label">
                
            </div>
            <div class='action'>
                <%=form.submit%>
            </div>
            
            <% end %>
    
</section>
</body>